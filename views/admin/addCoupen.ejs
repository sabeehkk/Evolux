  <div class="container">
    <h1 class="mt-4">Add Coupen</h1>

    <form action="/admin/add-coupen" method="POST" onsubmit="return validateForm()">
      <div class="form-group">
        <label for="coupenName">Coupen Name</label>
        <input type="text" class="form-control" id="coupenName" name="coupenName" required>
      </div>
      
     

      <div class="form-group">
        <label for="expiryDate">Expiry Date</label>
        <input type="date" class="form-control" id="expiryDate" name="expiryDate" required>
      </div>
      <div class="form-group">
        <label for="minimumPrice">Minimum Price</label>
        <input type="number" class="form-control" id="minimumPrice" name="minimumPrice" required min="0">
        <small class="text-danger" id="minimumPriceError"></small>
      </div>
      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" class="form-control" id="quantity" name="quantity" required min="0">
        <small class="text-danger" id="quantityError"></small>
      </div>
      <div class="form-group">
        <label for="discount">Max Discount</label>
        <input type="number" class="form-control" id="discount" name="discount" required min="0" max="100">
        <small class="text-danger" id="discountError"></small>
      </div>
    
      <button type="submit" class="btn btn-primary">Add Coupon</button>
    </form>
    
  </div>

  <script>
    function validateForm() {
      let minimumPriceInput = document.getElementById("minimumPrice");
      let quantityInput = document.getElementById("quantity");
      let discountInput = document.getElementById("discount");
    
      let minimumPrice = parseFloat(minimumPriceInput.value);
      let quantity = parseInt(quantityInput.value);
      let discount = parseFloat(discountInput.value);
    
      let hasError = false;
    
      // Check if minimumPrice, quantity, and discount are greater than zero
      if (minimumPrice <= 0) {
        document.getElementById("minimumPriceError").textContent = "Minimum price must be greater than zero.";
        hasError = true;
      } else {
        document.getElementById("minimumPriceError").textContent = "";
      }

      
    
      if (quantity <= 0) {
        document.getElementById("quantityError").textContent = "Quantity must be greater than zero.";
        hasError = true;
      } else {
        document.getElementById("quantityError").textContent = "";
      }
    
      if (discount <= 0) {
        document.getElementById("discountError").textContent = "Discount must be greater than zero.";
        hasError = true;
      }else if (discount > 100) {
    document.getElementById("discountError").textContent = "Discount cannot be greater than 100.";
    hasError = true
       } else {
        document.getElementById("discountError").textContent = "";
      }
    
      return !hasError; // Return true if there are no errors, false if there are errors.
    }
    </script>
