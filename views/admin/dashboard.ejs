          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% if(users.length > 0){ %>
          <% for(let i = 0; i < users.length; i++){ %>
            <tr>
              <td><%= users[i].firstName %></td>
              <td><%= users[i].email %></td>
              <td><%= users[i].mobile %></td>
              <td>
                <% if (users[i].status){ %>
                  <button class="btn btn-danger btn-block" onclick="block_unbloock('<%= users[i]._id %>', 0)">Block</button>
                <% } else { %>
                  <button class="btn btn-success btn-block" onclick="block_unbloock('<%= users[i]._id %>', 1)">Unblock</button>
                <% } %>
              </td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="4">Users Not Found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
