<div class="container mt-5">
  <h1 class="mb-4 text-center">Category</h1>
    <!-- Add new category form -->
    <form action="/admin/category/add" method="POST">
      <div class="row">
          <div class="col-md-6 mb-3">
              <label for="name">Category Name:</label>
              <input type="text" id="name" name="name" class="form-control input-box" required>
          </div>
          <div class="col-md-6 mb-3">
              <label for="description">Description:</label>
              <input type="text" id="description" name="description" class="form-control" required>
          </div>
      </div>
      <button type="submit" class="btn btn-primary btn-stylish">Add Category</button>
  </form>
  <h4 class="mt-5">All Categories</h4>
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Listed</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categoryData.forEach((category, index) => { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= category.name %></td>
                    <td><%= category.description %></td>
                    <td>
                        <% if (category.Is_status) { %>
                            <a href="/admin/listCategory/action?id=<%= category._id %>&Is_status=<%= category.Is_status %>">
                                <button type="button" class="btn btn-danger">Unlist</button>
                            </a>
                        <% } else { %>
                            <a href="/admin/listCategory/action?id=<%= category._id %>&Is_status=<%= category.Is_status %>">
                                <button type="button" class="btn btn-success">List</button>
                            </a>
                        <% } %>
                    </td>
                    <td>
                        <a href="/admin/EditCategory/<%= category._id%>" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
