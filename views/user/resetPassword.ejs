
<link href="css/sb-admin-2.min.css" rel="stylesheet">


<body class="mt-5">

    <div class="container pt-5 mt-5">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-md-9 ml-5 pl-5">
                                <div class="p-5 ml-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Reset Your Password</h1>
                                    </div>
                                    <form class="user" method="post" action="/resetPassword">
                                        <div class="form-group">
                                            <input type="hidden" name="email" value="<%=email%>" id="">
                                            <input name="newPassword" type="password" class="text-center form-control form-control-user" id="newPassword" aria-describedby="emailHelp" placeholder="Enter New Password">
                                            <small id="passwordHelp" class="form-text text-muted">
                                                Password must be at least 6 characters long and should not contain spaces.
                                            </small>
                                        </div>
                                        <div class="form-group">
                                            <input name="ConformPassword" type="password" class="text-center form-control form-control-user" id="confirmPassword" aria-describedby="emailHelp" placeholder="Confirm Password">
                                            <!-- Add a span for password mismatch message -->
                                            <span id="passwordMismatch" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block" id="resetPasswordButton">Reset Password</button>
                                        <p class="text-danger text-center"><%=message%></p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>


    <script>
        const newPasswordInput = document.getElementById("newPassword");
        const confirmPasswordInput = document.getElementById("confirmPassword");
        const passwordMismatchMessage = document.getElementById("passwordMismatch");
        const resetPasswordButton = document.getElementById("resetPasswordButton");
    
        resetPasswordButton.addEventListener("click", function (event) {
            const newPassword = newPasswordInput.value;
            const confirmPassword = confirmPasswordInput.value;
    
            // Password strength validation
            if (newPassword.includes(" ")) {
                event.preventDefault();
                newPasswordInput.classList.add("is-invalid");
                passwordMismatchMessage.textContent = "Invalid password. Password should not contain spaces.";
                return;
            } else if (newPassword.length < 6) {
                event.preventDefault();
                newPasswordInput.classList.add("is-invalid");
                passwordMismatchMessage.textContent = "Password must be at least 6 characters long.";
                return;
            } else {
                newPasswordInput.classList.remove("is-invalid");
                passwordMismatchMessage.textContent = "";
            }
    
            // Password match validation
            if (newPassword !== confirmPassword) {
                event.preventDefault();
                confirmPasswordInput.classList.add("is-invalid");
                passwordMismatchMessage.textContent = "Passwords do not match.";
                return;
            } else {
                confirmPasswordInput.classList.remove("is-invalid");
                passwordMismatchMessage.textContent = "";
            }
        });
    </script>

</body>

</html>
