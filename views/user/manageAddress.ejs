<%-include('../user/layout/nav.ejs')%>

<!DOCTYPE html>
<html>
<head>
  <title>Manage Address</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css">
  <style>
    /* Custom CSS styles */
    .btn-action {
      margin-right: 5px;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <h2 style="margin-left: 500px;">Manage Address</h2>

        </nav>
      </div>
    </div>
    <div class="row">
    
    </div>
    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Address</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% address.forEach((address, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= address.name %></td>
                <td><%= address.housename %>, <%= address.street %>, <%= address.pincode %>, <%= address.phone %></td>
                <td>
                  <a href="/editAddress/<%= address._id %>" class="btn_1 delete-button" style="font-size: 12px; padding: 8px 18px;">Edit</a>

                  <a href="/deleteAddress/<%= address._id %>" class="btn_1 delete-button" style="font-size: 12px; padding: 8px 18px;" >Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col">
      <a href="/addAddress" class="btn_1 delete-button" style="font-size: 12px; padding: 8px 18px;">Add Address</a>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>
