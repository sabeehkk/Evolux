<script>
  function changeQty(prductId,helper) {
    console.log({ helper });

    fetch(`/changeQuantity?productId=${prductId}&helper=${helper}`)
      .then(response => response.json())
      .then(data => {
        // Handle the response data
        console.log('data resciedsfasojbh');
        console.log(data);
        // window.location.reload()

        $('.hloo-'+prductId).load('/cart .hloo-'+prductId);
        $(`#subtotal-${prductId}`).load(`/cart #subtotal-${prductId}`);
        // $('.subtotoal-'+productId).load('/cart .subtotoal-'+productId);
        $('#subtotal-total').load('/cart #subtotal-total');
      })
      .catch(error => {
        // Handle any errors
        console.log(error);
      });


  }
</script>

<script>
  async function deleteCartItem(id) {
    try {
      const result = await Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
      });

      if (result) {
        const response = await axios.post("/deleteCart", { id: id });
        if (response.data.success) {
          $('.cart_area').load('/cart .cart_area')
          await Swal.fire({
            title: "Deleted!",
            text: "Your item has been deleted.",
            icon: "success",
          });
          // location.reload();
        } else {
          await Swal.fire({
            title: "Error!",
            text: "Something went wrong.",
            icon: "error",
          });
        }
      }
    } catch (error) {
      console.log(error.message);
    }
  }
</script>

